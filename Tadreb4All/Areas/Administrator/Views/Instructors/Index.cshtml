@model IEnumerable<Tadreb4All.Models.Instructor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}



<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InstructorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.InsImg)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InstructorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
           
            <td>
                
                <img src="@Url.Content(item.InsImg)" width="80" height="80" />
            </td>
           
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.InstructorId">Edit</a> |
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.InstructorId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.InstructorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
