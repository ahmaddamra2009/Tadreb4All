@model IEnumerable<Blog>

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-4">
        <article class="aa-blog-single">
            <figure class="aa-blog-img">
                <a  asp-action="BlogDetails" asp-controller="Home" asp-route-id="@item.BlogId"><img src="@Url.Content(item.BlogImg)" alt="@item.BlogTitle"></a>
                <span class="aa-date-tag">@item.PubDate.ToShortDateString()</span>
            </figure>
            <div class="aa-blog-single-content">
                <h3><a href="#">@item.BlogTitle</a></h3>
                <p>@item.BlogDesc.Substring(1,10) ...</p>
                <div class="aa-blog-single-bottom">
                    <a href="#" class="aa-blog-author"><i class="fa fa-user"></i> @item.UserName</a>
                    <a href="#" class="aa-blog-comments"><i class="fa fa-comment-o"></i>6</a>
                </div>
            </div>

        </article>
    </div>
    }
    


</div>